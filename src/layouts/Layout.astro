---
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Porftolio Juan Manuel" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="https://upload.wikimedia.org/wikipedia/commons/6/6d/Red_dot.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Work+Sans:wght@600&display=swap");
	@import url("https://fonts.googleapis.com/css2?family=Work+Sans&display=swap");
	@font-face {
  		font-family: "VirtualBoy";
  		src: url("src/assets/fonts/logo.ttf") format("truetype");
	}

	:root {
	}
	html {
		font-family: "Work Sans", sans-serif;
		background-size: 224px;
	}

	body {
    background: #141314;
    height: 100vh;
    background-image: linear-gradient(to right, rgba(79, 79, 79, 0.18) 1px, transparent 1px), linear-gradient(to bottom, rgba(79, 79, 79, 0.18) 1px, transparent 1px);
    background-size: 14px 24px;
}

</style>
